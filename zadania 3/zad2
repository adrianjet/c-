using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp2
{
    class Program
    {
        static void Main(string[] args)
        {
            String text = "abc";

            ReserveText(text);

            Console.ReadKey();
        }
        static string ReserveText (string text)
        {
            string textReserveText = "";

            for ( int i= text.Length -1; i >=0 ; i--)
            {

                textReserveText += text[i];

            }

            Console.WriteLine(textReserveText);
            return textReserveText;

        }
    }
}
